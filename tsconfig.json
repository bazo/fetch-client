	"compilerOptions": {
		"lib": ["DOM", "ES6", "ESNext"],
		"target": "ES6",
		"module": "ESNext",
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"outDir": "./lib",
		"strict": true,
		"moduleResolution": "node",
